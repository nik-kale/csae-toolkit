{
  "manifest_version": 3,
  "name": "CSAE Toolkit",
  "description": "This extension complements the Cisco Support Assistant Extension (CSAE) and offers several purpose-built tools to aid in campaign creation.",
  "version": "1.2.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon128.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
